<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD">

    <!-- 초기 화면 -->
    <LinearLayout
        android:id="@+id/layout_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간표가 없습니다."
            android:textSize="16sp"
            android:textColor="#888888"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_add_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가하기"
            android:backgroundTint="#FFE275"
            android:textColor="#1A274D" />
    </LinearLayout>

    <!-- 시간표 화면 -->
    <ScrollView
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 요일 라벨 -->
            <LinearLayout
                android:id="@+id/layout_day_labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="50dp"
                android:layout_marginBottom="4dp" />

            <!-- 시간 라벨 + 시간표 셀 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_time_labels"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <FrameLayout
                    android:id="@+id/timetable_grid"
                    android:layout_width="match_parent"
                    android:layout_height="1000dp"
                    android:layout_marginStart="-4dp"
                    android:background="#FFFFFF" />
            </LinearLayout>

            <!-- 카드 리스트 -->
            <LinearLayout
                android:id="@+id/layoutTimetableList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp" />

            <!-- 추가 버튼 -->
            <Button
                android:id="@+id/btn_add_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가하기"
                android:backgroundTint="#FFE275"
                android:textColor="#1A274D"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
