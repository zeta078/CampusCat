<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3E5FC">

    <!-- 상단 바: 타이머 + 재화 + 일시정지 -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/timerText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="남은 시간: 30초"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/fishIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/fish_blue" />

            <TextView
                android:id="@+id/currencyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/pauseButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_pause"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="일시정지 버튼"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- 고양이: 기본 -->
    <ImageView
        android:id="@+id/catNormal"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/cat_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp" />

    <!-- 고양이: 팔 벌린 상태 -->
    <ImageView
        android:id="@+id/catCatch"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/cat_catch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>