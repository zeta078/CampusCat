<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayoutTimetable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1,2,3,4,5"
    android:background="@drawable/table_border_bg"
    android:layout_margin="8dp">

    <TableRow>
        <TextView android:text="" android:padding="8dp"/>
        <TextView android:text="월" android:gravity="center" android:textStyle="bold"/>
        <TextView android:text="화" android:gravity="center" android:textStyle="bold"/>
        <TextView android:text="수" android:gravity="center" android:textStyle="bold"/>
        <TextView android:text="목" android:gravity="center" android:textStyle="bold"/>
        <TextView android:text="금" android:gravity="center" android:textStyle="bold"/>
    </TableRow>

    <!-- 반복 예시: 9:00, 9:30, 10:00, ... 16:30까지 -->
    <TableRow>
        <TextView android:text="9:00" android:gravity="center"/>
        <TextView android:id="@+id/cell_m9" android:gravity="center"/>
        <TextView android:id="@+id/cell_t9" android:gravity="center"/>
        <TextView android:id="@+id/cell_w9" android:gravity="center"/>
        <TextView android:id="@+id/cell_th9" android:gravity="center"/>
        <TextView android:id="@+id/cell_f9" android:gravity="center"/>
    </TableRow>
    <TableRow>
        <TextView android:text="9:30" android:gravity="center"/>
        <TextView android:id="@+id/cell_m9_30" android:gravity="center"/>
        <TextView android:id="@+id/cell_t9_30" android:gravity="center"/>
        <TextView android:id="@+id/cell_w9_30" android:gravity="center"/>
        <TextView android:id="@+id/cell_th9_30" android:gravity="center"/>
        <TextView android:id="@+id/cell_f9_30" android:gravity="center"/>
    </TableRow>
    <TableRow>
        <TextView android:text="10:00" android:gravity="center"/>
        <TextView android:id="@+id/cell_m10" android:gravity="center"/>
        <TextView android:id="@+id/cell_t10" android:gravity="center"/>
        <TextView android:id="@+id/cell_w10" android:gravity="center"/>
        <TextView android:id="@+id/cell_th10" android:gravity="center"/>
        <TextView android:id="@+id/cell_f10" android:gravity="center"/>
    </TableRow>
    <TableRow>
        <TextView android:text="10:30" android:gravity="center"/>
        <TextView android:id="@+id/cell_m10_30" android:gravity="center"/>
        <TextView android:id="@+id/cell_t10_30" android:gravity="center"/>
        <TextView android:id="@+id/cell_w10_30" android:gravity="center"/>
        <TextView android:id="@+id/cell_th10_30" android:gravity="center"/>
        <TextView android:id="@+id/cell_f10_30" android:gravity="center"/>
    </TableRow>
    <!-- ... 11:00, 11:30 ... 16:30까지 같은 방식으로 복붙! -->
</TableLayout>
