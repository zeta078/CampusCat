<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5ECFF">

    <!-- 상단 뒤로가기용 Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#D5ECFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title=""
        app:navigationIcon="@drawable/abc_ic_ab_back_material" />

    <!-- 학식 제목 -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="오늘의 학식"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <!-- 아침/점심/저녁 버튼 -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnBreakfast"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="아침"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            app:backgroundTint="#2D4DC2"
            app:cornerRadius="24dp"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnLunch"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="점심"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            app:backgroundTint="#2D4DC2"
            app:cornerRadius="24dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnDinner"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="저녁"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            app:backgroundTint="#2D4DC2"
            app:cornerRadius="24dp" />
    </LinearLayout>

    <!-- 메뉴 텍스트 -->
    <TextView
        android:id="@+id/textContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⦁ 김치찌개\n⦁ 제육볶음\n⦁ 계란찜\n⦁ 밥, 김치"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 달력 버튼 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="달력 열기"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="#2D4DC2"
        app:tint="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>
