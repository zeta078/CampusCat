<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".InventoryActivity">

    <!-- 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 인벤토리 타이틀 -->
    <TextView
        android:id="@+id/tvInventoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인벤토리"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        android:layout_marginStart="12dp" />

    <!-- 재화: 물고기 -->
    <ImageView
        android:id="@+id/fishIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/fish_blue"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvFishCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/fishIcon"
        app:layout_constraintBottom_toBottomOf="@id/fishIcon"
        app:layout_constraintStart_toEndOf="@id/fishIcon" />

    <!-- 러그 아이템 -->
    <ImageView
        android:id="@+id/decorRug"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/decorrug"
        android:contentDescription="러그"
        app:layout_constraintTop_toBottomOf="@id/fishIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/priceRug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="물고기: 200"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/decorRug"
        app:layout_constraintStart_toStartOf="@id/decorRug"
        app:layout_constraintEnd_toEndOf="@id/decorRug"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/btnBuyRug"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="구매하기"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/priceRug"
        app:layout_constraintStart_toStartOf="@id/decorRug"
        app:layout_constraintEnd_toEndOf="@id/decorRug"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/btnToggleRug"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="설치하기"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/btnBuyRug"
        app:layout_constraintStart_toStartOf="@id/decorRug"
        app:layout_constraintEnd_toEndOf="@id/decorRug"
        android:layout_marginTop="4dp" />

    <!-- 장난감 아이템 -->
    <ImageView
        android:id="@+id/decorToy"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/decortoy"
        android:contentDescription="장난감"
        app:layout_constraintTop_toTopOf="@id/decorRug"
        app:layout_constraintStart_toEndOf="@id/decorRug"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/priceToy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="물고기: 300"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/decorToy"
        app:layout_constraintStart_toStartOf="@id/decorToy"
        app:layout_constraintEnd_toEndOf="@id/decorToy"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/btnBuyToy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="구매하기"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/priceToy"
        app:layout_constraintStart_toStartOf="@id/decorToy"
        app:layout_constraintEnd_toEndOf="@id/decorToy"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/btnToggleToy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="설치하기"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/btnBuyToy"
        app:layout_constraintStart_toStartOf="@id/decorToy"
        app:layout_constraintEnd_toEndOf="@id/decorToy"
        android:layout_marginTop="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
