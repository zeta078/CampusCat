<resources>
    <!-- 버튼 둥글게 만들기 -->
    <style name="RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_rounded_button</item>
        <item name="backgroundTint">#D5ECFF</item> <!-- 버튼 기본 색 -->
        <item name="android:textColor">#1A274D</item>
        <item name="android:padding">12dp</item>
        <!-- cornerRadius는 drawable에서 처리 권장 -->
    </style>

    <!-- 카드뷰 -->
    <style name="CardViewOverlay" parent="Widget.MaterialComponents.CardView">
        <item name="cardViewStyle">@style/CardView</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- EditText 둥글게 -->
    <style name="RoundedEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="background">@drawable/bg_rounded_edittext</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="AppTheme_AlertDialogOverlay"
        parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
    </style>

    <style name="RoundedCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
    </style>
</resources>
